%p

.row.hide-for-small
  .large-4.columns
    .row
      .large-12.text-center.columns
        %img{ src: "#{data('personal')['avatar']}?s=200" }

  .large-8.columns
    .row
      .large-9.columns
        %h2.text-center= data('personal')['name']
    - data('personal')['contacts'].each do |key, value|
      %p.row
        .large-3.text-right.columns= key.humanize
        .large-9.columns
          %a{ href: value['link'] }= value['title']

.row.show-for-small
  .small-12.columns
    .row
      .small-8.small-offset-4.columns
        %img{ src: "#{data('personal')['avatar']}?s=200" }
    .row
      .small-8.small-offset-4.columns
        %h2= data('personal')['name']
    - data('personal')['contacts'].each do |key, value|
      %ul.side-nav.row
        %li
          .small-4.text-right.columns= key.humanize
          .small-8.columns
            %a{ href: value['link'] }= value['title']




